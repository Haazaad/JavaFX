<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2"
      fx:controller="ru.ArtemSmirnov.java2.chat.client.Controller">
    <HBox fx:id="loginPanel">
        <TextField fx:id="usernameField" onAction="#login" promptText="Укажите свой ник" HBox.hgrow="ALWAYS" />
        <Button onAction="#login" text="Войти" />
    </HBox>
    <TextArea fx:id="msgArea" editable="false" VBox.vgrow="ALWAYS" />
    <HBox fx:id="msgPanel" managed="false" visible="false">
        <TextField fx:id="msgField" onAction="#sndMsg" promptText="Введите сообщение" HBox.hgrow="ALWAYS" />
        <Button onAction="#sndMsg" text="Send" />
    </HBox>
</VBox>
