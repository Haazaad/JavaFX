<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.ArtemSmirnov.java2.chat.client.Controller">
    <HBox fx:id="loginPanel">
        <TextField fx:id="usernameField" onAction="#login" promptText="Укажите свой ник" HBox.hgrow="ALWAYS" />
        <Button onAction="#login" text="Войти" />
    </HBox>
    <HBox VBox.vgrow="ALWAYS">
        <TextArea fx:id="msgArea" editable="false" wrapText="true" HBox.hgrow="ALWAYS" />
        <ListView fx:id="clientsList" maxWidth="150" minWidth="150" prefWidth="150" />
    </HBox>
    <HBox fx:id="msgPanel">
        <TextField fx:id="msgField" onAction="#sendMessage" promptText="Введите сообщение" HBox.hgrow="ALWAYS" />
        <Button onAction="#sendMessage" text="Send" />
    </HBox>
</VBox>
